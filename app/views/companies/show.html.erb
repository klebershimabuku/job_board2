<% @title = @company.name %>
<% provide(:title, @title) %>
<% provide(:description, @company.try(:description)) %>
<% provide(:keywords, @company.name) %>
<div class='row'>
	
	<div class='ad_header'>
		<script type="text/javascript"><!--
		google_ad_client = "ca-pub-1679261120441100";
		/* 728x90 company header internal */
		google_ad_slot = "9073062167";
		google_ad_width = 728;
		google_ad_height = 90;
		//-->
		</script>
		<script type="text/javascript"
		src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
		</script>
	</div>
  <div class='page-header'>
    <h1><%= @title %></h1>
  </div>
  <div class='span12'>
    <p><%= @company.address %></p><hr />
    <%= simple_format(@company.description) %>

    <% if can? [:edit, :delete], Company %>
    <p>
      <%= link_to 'Editar', edit_company_path(@company) %> |
      <%= link_to 'Excluir', @company, method: 'delete' %>
    </p>
    <% end %>
  </div>
</div>