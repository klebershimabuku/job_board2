<% provide(:title, @post.title) %>
<% provide(:description, @post.description) %>
<% provide(:keywords, @post.title + ', empregos no japao, trabalho no japão, enpregos, emprego no japão, emprego japão, japão empregos, empregos no japão, japão trabalho, trabalho no japão, empregos no jp, trabalhar japão, trabalhar no japão, classificados no japão, serviço no japão, vagas no japão, serviços no japão, trabalho no japão para brasileiros, trabalhe no japão, empregos no japão') %>

<div class='row'>
  <div class='post'>
    <div class='span12'>
      <p><%= @post.location %></p>
      <h1><%= @post.title %></h1>

      <div class='row'>

        <div class='span9'>
          <%= simple_format(m(@post.description)) %>

          <% if @post.user.contact_info.present? %>
          <hr />
          <h3><%= @post.user.contact_info.title %></h3>
          <%= simple_format(auto_link(@post.user.contact_info.description)) %>
          <% end %>

          <%= render 'manager_buttons', collection: @post %>
          
          <hr>
          <p><%= link_to '← Retornar à página principal de anúncios', posts_path %></p>
        </div>

        <!-- sidebar -->
        <div class='span3'>
          <h4>TAGS</h4>
          <br>
          <ul class='taglist-vertical tags'>
            <% @post.tags.split(',').flatten.sort.each do |tag| %>
            <li><%= link_to tag, tags_filter_post_path(tag) %></li>
            <% end %>
          </ul>
          <span class='created_at'>publicado <%= timeago_tag @post.published_at, nojs: true, limite: 10.days.ago %></span>
          
          <div class='share'>
            <h4>Compartilhe esta vaga com seus amigos e familiares:</h4>
            <div class="fb-like" data-href="http://www.shigotodoko.com<%= url_for(@post) %>" data-send="false" data-layout="button_count" data-width="105" data-show-faces="true"></div>
            <a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-via="shigotodoko" data-url="http://www.shigotodoko.com<%= url_for(@post) %>" data-lang="en">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
          </div>
        </div>
        <!-- end sidebar -->

      </div>
    </div>
  </div>
</div>