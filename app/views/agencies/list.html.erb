<% @title = "Agências da Hello Work em #{params[:prefecture_name].capitalize}" %>
<% provide(:title, @title) %>
<% provide(:description, @title) %>
<% provide(:keywords, @title) %>
<div class='row'>
  <div class='span12'>

    <% if @offices.any? %>

    <div class='page-header'>
      <h1><%= @title %></h1>
    </div>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Cidade</td>
          <th>Atendimento (dia, horário, suporte/idioma)</th>
          <th>Endereço</th>
          <th>Telefone</th>
        </tr>
      </thead>
      <tbody>
      <% @offices.each do |office| %>
        <tr>
          <td><%= office['name'] %></td>
          <td><%= office['reception'] %></td>
          <td><%= office['address'] %></td>
          <td><%= office['phone'] %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <% else %>

    <div class='page-header'>
      <h1><%= @title %></h1>
      <h2>Desculpe, não temos registro de escritórios da Hello Work em <%= params[:prefecture_name].capitalize %></h2>
    </div>

    <% end %>


  </div>
</div>